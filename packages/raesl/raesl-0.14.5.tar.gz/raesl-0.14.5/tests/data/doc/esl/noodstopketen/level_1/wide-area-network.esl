define component WideAreaNetwork
  parameters
    # Centrale zijde inputs
    input-object-bediensignaal is a bediensignaal
    input-statussignaal_van_de_centrale-router-noodstoptoestellen is a statussignaal

    # Centrale zijde outputs
    output-statussignaal_van_het_object is a statussignaal
    output-statussignaal_van_het_noodstopcircuit is a statussignaal

    # Object zijde inputs
    input-statussignaal_van_het_object is a statussignaal
    input-statussignaal_van_het_noodstopcircuit is a statussignaal

    # Object zijde outputs
    output-object-bediensignaal is a bediensignaal
    output-statussignaal_van_de_centrale-router-noodstoptoestellen is a statussignaal

  variables
    de_latency is a time
    het_safety-integrity-level is a prestatie-indicator

  transformation-requirement
    WAN-omzetten-bediensignaal-01: must omzetten input-object-bediensignaal in output-object-bediensignaal with subclauses
      * sil-level-01: het_safety-integrity-level  must be at least t.b.d.
      * max-latency-01: de_latency must be at most t.b.d. [ms]

  comment
    WAN-omzetten-bediensignaal-01 #< Het networkprotocol is nader gespecificeerd in de UKVC.

  transformation-requirement
    WAN-omzetten-statussignaal-01: must omzetten    input-statussignaal_van_de_centrale-router-noodstoptoestellen in output-statussignaal_van_de_centrale-router-noodstoptoestellen with subclauses
      * sil-level-01: het_safety-integrity-level  must be at least t.b.d.
      * max-latency-01: de_latency must be at most t.b.d. [ms]

  comment
    WAN-omzetten-statussignaal-01 #< Het networkprotocol is nader gespecificeerd in de UKVC.

  transformation-requirement
    WAN-omzetten-statussignaal-02: must omzetten input-statussignaal_van_het_object in output-statussignaal_van_het_object with subclauses
      * sil-level-01: het_safety-integrity-level  must be at least t.b.d.
      * max-latency-01: de_latency must be at most t.b.d. [ms]

  comment
    WAN-omzetten-statussignaal-02 #< Het networkprotocol is nader gespecificeerd in de UKVC.

  transformation-requirement
    WAN-omzetten-statussignaal-03: must omzetten input-statussignaal_van_het_noodstopcircuit in output-statussignaal_van_het_noodstopcircuit with subclauses
      * sil-level-01: het_safety-integrity-level  must be at least t.b.d.
      * max-latency-01: de_latency must be at most t.b.d. [ms]

  comment
    WAN-omzetten-statussignaal-03 #< Het networkprotocol is nader gespecificeerdn in de UKVC.
