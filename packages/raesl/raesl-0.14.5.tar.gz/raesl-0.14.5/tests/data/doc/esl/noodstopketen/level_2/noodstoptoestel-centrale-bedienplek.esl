define component NoodstoptoestelCentraleBedienplek
  parameters
    # Bediensignaal
    noodbedienhandeling_CBN is a bedienhandeling
    bediensignaal_NCB is a bediensignaal

    # Statussignaal
    gealloceerd_statussignaal_OBJ-PNC is a statussignaal
    statusinformatie_OBJ-PNC is a informatie-stroom
    objectbedienmodus is an bedienmodi-enumeratie
    operationele-status is a component-operationele-status-enumeratie property

  transformation-requirement
    CBN-omzetten-statussignaal-01: must omzetten gealloceerd_statussignaal_OBJ-PNC in statusinformatie_OBJ-PNC

  comment
    CBN-omzetten-statussignaal-01 #< Nader te bepalen informatie m.b.t. tot bovenstaande eis. Bijvoorbeeld een omschrijving van de verificatiemethode.

  transformation-requirement
    CBN-omzetten-bediensignaal-01: must omzetten noodbedienhandeling_CBN in bediensignaal_NCB

  comment
    CBN-omzetten-bediensignaal-01 #< Nader te bepalen informatie m.b.t. tot bovenstaande eis. Bijvoorbeeld een omschrijving van de verificatiemethode.

  behavior-requirement
    CBN-operationele-status:
      case CBN-is-actief:
        when
          * c1: objectbedienmodus is equal to bediening-op-afstand [-]
          * c2: gealloceerd_statussignaal_OBJ-PNC is equal to verbonden [-]
        then
          * r1: operationele-status must be equal to actief [-]
      case CBN-is-passief:
      when
          * c3: objectbedienmodus is equal to bediening-lokaal-nood [-] or objectbedienmodus is equal to bediening-lokaal-regulier-of-onderhoud [-]
          * c4: gealloceerd_statussignaal_OBJ-PNC is equal to niet-verbonden [-]
        then
          * r2: operationele-status must be equal to passief [-]
