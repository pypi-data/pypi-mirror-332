{
    "name": "博客风格",
    "id": "blog",
    "description": "现代化博客风格模板，适合在线发布",
    "version": "1.0.0",
    "author": "Fiction团队",
    "html_template": "template.html",
    "css_files": ["style.css", "blog.css"],
    "js_files": ["blog.js"],
    "preview_image": "preview.png",
    "pdf_settings": {
        "page_size": "A4",
        "orientation": "portrait",
        "margins": {"top": "2cm", "right": "2cm", "bottom": "2cm", "left": "2cm"}
    },
    "image_settings": {
        "default_width": 800,
        "max_height": 0,
        "device_scale_factor": 2
    },
    "supported_features": ["toc", "code-highlight", "footnotes", "social-sharing", "comments"]
} 