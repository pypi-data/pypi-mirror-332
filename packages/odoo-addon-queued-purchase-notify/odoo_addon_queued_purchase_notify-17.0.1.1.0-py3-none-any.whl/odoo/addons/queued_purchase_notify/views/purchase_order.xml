<odoo>
    <record id="queued_purchase_notify_view_order_form" model="ir.ui.view">
        <field name="name">queued.purchase.notify.view.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    string="Mail Queues"
                    name="mail_queues"
                    invisible="not mail_queue_ids"
                >
                    <field name="mail_queue_ids" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
