{
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.py[cod]": true,
        "**/*$py.class": true,
        "**/*.so": true,
        "**/.Python": true,
        "**/env/": true,
        "**/venv/": true,
        "**/ENV/": true,
        "**/build/": true,
        "**/develop-eggs/": true,
        "**/dist/": true,
        "**/downloads/": true,
        "**/eggs/": true,
        "**/.eggs/": true,
        "**/*.egg-info/": true,
        "**/*.egg": true,
        "**/.coverage": true,
        "**/.coverage.*": true,
        "**/.cache/": true,
        "**/.pytest_cache/": true,
        "**/.hypothesis/": true,
        "**/.tox/": true,
        "**/htmlcov/": true,
        "**/nosetests.xml": true,
        "**/coverage.xml": true,
        "**/*.cover": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.py[cod]": true,
        "**/*$py.class": true,
        "**/*.so": true,
        "**/.Python": true,
        "**/env/": true,
        "**/venv/": true,
        "**/ENV/": true,
        "**/build/": true,
        "**/develop-eggs/": true,
        "**/dist/": true,
        "**/downloads/": true,
        "**/eggs/": true,
        "**/.eggs/": true,
        "**/*.egg-info/": true,
        "**/*.egg": true
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ]
}
