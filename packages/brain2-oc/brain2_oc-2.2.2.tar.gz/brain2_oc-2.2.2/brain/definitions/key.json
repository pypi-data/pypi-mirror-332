{
	"__sql__": {
		"auto_primary": false,
		"create": ["_created", "_updated", "user", "type"],
		"db": "brain",
		"host": "brain",
		"indexes": {
			"user_type": {"unique": ["user", "type"]}
		},
		"table": "brain_key",
		"charset": "utf8mb4",
		"collate": "utf8mb4_bin"
	},

	"__name__": "Key",

	"_id": {
		"__type__": "string",
		"__regex__": "^[0-9a-f]{32}$",
		"__sql__": {
			"type": "char(32)"
		}
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP"
		}
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true,
		"__sql__": {
			"opts": "default CURRENT_TIMESTAMP on update CURRENT_TIMESTAMP"
		}
	},

	"user": {
		"__type__": "uuid"
	},

	"type": {
		"__type__": "string",
		"__options__": ["forgot", "setup", "verify"]
	}
}