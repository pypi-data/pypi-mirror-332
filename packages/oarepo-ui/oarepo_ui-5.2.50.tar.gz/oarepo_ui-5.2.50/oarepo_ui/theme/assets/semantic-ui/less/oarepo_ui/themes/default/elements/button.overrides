.ui.button {
  &.clear-filters-button {
    color: black;
    margin-bottom: 5px;
  }

  &.facets-sidebar-open-button {
    position: relative;
    padding: 0.7rem;
    .icon {
      margin: 0 !important;
    }
  }
  &.copy-btn {
    opacity: 0.3;
  }
  &.copy-btn.selected {
    opacity: 1;
    color: @primaryColor;
  }
  &.copy-btn:hover {
    opacity: 1;
    background-color: none;
  }
}
