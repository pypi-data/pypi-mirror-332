  },
  {
    "label": "Workspace to Template",
    "type": "shell",
    "command": "${workspaceFolder}/utils/mt-vs",
    "group": "none",
    "presentation": {
      "reveal": "always",
      "panel": "new"
    },
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }
]
