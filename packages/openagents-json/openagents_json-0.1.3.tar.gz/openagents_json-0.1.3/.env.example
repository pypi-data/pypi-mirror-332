 # OpenAgents JSON Configuration
# Copy this file to .env and modify as needed

#######################################
# Application Settings
#######################################
# Application name
# OPENAGENTS_APP__APP_NAME=OpenAgents JSON

# Enable debug mode with detailed logging and error messages
# OPENAGENTS_APP__DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# OPENAGENTS_APP__LOG_LEVEL=INFO

# Secret key for cryptographic signing (will be auto-generated in development mode)
# OPENAGENTS_APP__SECRET_KEY=your-secret-key-change-this-in-production

# Application environment (development, testing, production)
# OPENAGENTS_APP__ENVIRONMENT=development

# API prefix for routes
# OPENAGENTS_APP__API_PREFIX=/api

#######################################
# Registry Settings
#######################################
# Automatically discover agents in specified modules
# OPENAGENTS_REGISTRY__AUTO_DISCOVER=true

# Modules to scan for agent registrations
# OPENAGENTS_REGISTRY__MODULES=["my_app.agents", "my_app.tools"]

#######################################
# Workflow Settings
#######################################
# Validation mode for workflows (strict, lenient, none)
# OPENAGENTS_WORKFLOW__VALIDATION_MODE=strict

#######################################
# Agent Settings
#######################################
# Default LLM provider (openai, anthropic, local)
# OPENAGENTS_AGENT__DEFAULT_LLM_PROVIDER=openai

# OpenAI API key for accessing OpenAI models
# OPENAGENTS_AGENT__OPENAI_API_KEY=sk-...

# Anthropic API key for accessing Claude models
# OPENAGENTS_AGENT__ANTHROPIC_API_KEY=sk-...

# Default model identifier to use when not specified
# OPENAGENTS_AGENT__DEFAULT_MODEL=gpt-3.5-turbo

# Default timeout in seconds for agent operations
# OPENAGENTS_AGENT__TIMEOUT_SECONDS=30

# Maximum number of retries for agent operations
# OPENAGENTS_AGENT__MAX_RETRIES=3

#######################################
# Job Settings
#######################################
# Number of days to retain completed jobs before cleanup
# OPENAGENTS_JOB__JOB_RETENTION_DAYS=30

# Maximum number of concurrent jobs to execute
# OPENAGENTS_JOB__MAX_CONCURRENT_JOBS=100

# Default timeout in seconds for job execution
# OPENAGENTS_JOB__DEFAULT_JOB_TIMEOUT_SECONDS=3600

# Default maximum number of retries for failed jobs
# OPENAGENTS_JOB__DEFAULT_MAX_RETRIES=3

# Default delay in seconds between job retries
# OPENAGENTS_JOB__DEFAULT_RETRY_DELAY_SECONDS=30

# Storage type for jobs (memory, file, database)
# OPENAGENTS_JOB__STORE_TYPE=memory

# Path for file-based job storage
# OPENAGENTS_JOB__STORE_PATH=/path/to/job/storage

#######################################
# Storage Settings
#######################################
# Type of storage backend (memory, file, redis, postgres, sqlite, mysql)
# OPENAGENTS_STORAGE__STORAGE_TYPE=memory

# Path to directory for file storage (required if storage_type is 'file')
# OPENAGENTS_STORAGE__FILE_STORAGE_PATH=/path/to/storage

# Redis connection URL (required if storage_type is 'redis')
# OPENAGENTS_STORAGE__REDIS_URL=redis://localhost:6379/0

#######################################
# Database Settings
#######################################
# Database dialect (sqlite, postgresql, mysql)
# OPENAGENTS_STORAGE__DATABASE__DIALECT=sqlite

# Path for SQLite database
# OPENAGENTS_STORAGE__DATABASE__PATH=./openagents.db

# Database host
# OPENAGENTS_STORAGE__DATABASE__HOST=localhost

# Database port
# OPENAGENTS_STORAGE__DATABASE__PORT=5432

# Database username
# OPENAGENTS_STORAGE__DATABASE__USERNAME=postgres

# Database password
# OPENAGENTS_STORAGE__DATABASE__PASSWORD=your-password

# Database name
# OPENAGENTS_STORAGE__DATABASE__NAME=openagents

# Direct database connection string (overrides other settings)
# OPENAGENTS_STORAGE__DATABASE__CONNECTION_STRING=postgresql://user:pass@localhost:5432/db

#######################################
# Custom Settings
#######################################
# You can add your own custom settings with the OPENAGENTS_ prefix
# OPENAGENTS_MY_CUSTOM_SETTING=custom-value